<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ”™ Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Regresar"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historial"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- ðŸ”˜ Tipo de transacciÃ³n -->
        <RadioGroup
            android:id="@+id/rg_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rb_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#00E676"
                android:text="Gasto"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/rb_ingreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:buttonTint="#00E676"
                android:text="Ingreso"
                android:textColor="#FFFFFF" />
        </RadioGroup>

        <!-- ðŸ”½ Filtros cuenta y mes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Spinner
                android:id="@+id/spinner_cuenta"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:foregroundTint="#fff"
                android:popupBackground="#1C1C1C"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

            <Spinner
                android:id="@+id/spinner_mes"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:foregroundTint="#fff"
                android:popupBackground="#1C1C1C"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />
        </LinearLayout>

        <!-- ðŸ” BotÃ³n Buscar -->
        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar transacciones"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#00E676"
            android:padding="14dp"
            android:elevation="2dp"
            android:enabled="false" />

        <!-- ðŸ“‹ Lista de transacciones -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingBottom="100dp" />
    </LinearLayout>
</ScrollView>
